
@{
    ViewBag.Title = "EditAnuncio";
}

@model List<empregos.Models.anuncio>
@{
    ViewBag.Title = "IndexWithWebGrid";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var grid = new WebGrid(source: Model.ToList(), canPage: true, rowsPerPage: 10);
    grid.Pager(WebGridPagerModes.All);
}
<style type="text/css">
    .webgrid-row-style {
        padding: 3px 7px 2px;
    }
</style>
<h2>Listando tarefas com o WebGrid</h2>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Descrição</th>
            <th scope="col">Preço</th>
            <th scope="col">medida</th>
            <th scope="col">categoria</th>
            <th scope="col">foto</th>
            <th scope="col">foto</th>
            <th scope="col">Editar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var anuncio in Model)
        {
            <tr>
                <th scope="row">@anuncio.id</th>
                <td>@anuncio.descricao</td>
                <td>@anuncio.preco</td>
                <td>@anuncio.medida</td>
                <td>@anuncio.idCategoria</td>
                <td>@anuncio.foto1</td>
                <td>@anuncio.foto2</td>
                <td><input type="button" value="editar" onclick="Edit(@anuncio.id)" /> </td>
                <td><input type="button" value="Excluir" onclick="Excluir(@anuncio.id)" ></td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/anuncio/EditAnuncio.js"></script>
}





